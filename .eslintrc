{
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "defaultParams": true,
      "forOf": true,
      "modules": true,
      "superInFunctions": true,
      "templateStrings": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "block-scoped-var": [0],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": [0],
    "comma-dangle": [2, "never"],
    "curly": [2, "multi-line"],
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "keyword-spacing": [2, {"before": true, "after": true, "overrides": {}}],
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-multiple-empty-lines": [2, {"max": 2 }],
    "no-trailing-spaces": [2, { "skipBlankLines": true }],
    "no-unused-vars": 2,
    "no-use-before-define": [2, "nofunc"],
    "quotes": [2, "single"],
    "semi": [2, "always"]
  }
}
